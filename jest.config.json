{
  "clearMocks": true,

  "collectCoverageFrom": [
    "src/**/*.{js,jsx,mjs}",
    "!src/index.js"
  ],

  "coverageDirectory": "coverage",

  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assets/js/styleMock.js",
    "\\.(css|scss)$": "<rootDir>/src/assets/js/styleMock.js"
  },

  "setupFiles": ["./enzyme.config.js"],

  "testEnvironment": "jsdom",

  "testMatch": [
    "**/__tests__/**/*.js?(x)",
    "**/?(*.)+(spec|test).js?(x)"
  ],

  "testPathIgnorePatterns": ["\\\\node_modules\\\\"],

  "testURL": "http://localhost",

  "transformIgnorePatterns": ["<rootDir>/node_modules/"],

  "verbose": false
}
